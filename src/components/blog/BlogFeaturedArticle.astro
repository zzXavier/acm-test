---
import type { CollectionEntry } from 'astro:content'
import BlogCard from './BlogCard.astro'

const { posts } = Astro.props

interface Props {
    posts: CollectionEntry<'posts'>[]
}
---

<section class="mx-auto max-w-[85rem] px-4 py-8 sm:px-6 lg:px-8 mb-10 2xl:max-w-full min-h-screen">
    <div class="text-left">
        <h2
            id="selected-articel"
            class="mb-4 text-balance text-5xl font-extrabold tracking-tight text-neutral-800 dark:text-neutral-200"
        >
            Featured Posts
        </h2>
        <p class="mb-8 max-w-prose text-pretty font-light text-neutral-600 dark:text-neutral-400 sm:text-xl">
            Here are a few articles that I think are not bad, hope you like too.
        </p>
    </div>

    <div class="flex flex-col md:flex-row md:space-x-8 lg:space-x-12">
        <div class="w-full md:w-2/3">
            <div class="grid gap-6 grid-cols-1 sm:grid-cols-2">
                {posts.map(b => <BlogCard blog={b} />)}
            </div>
        </div>

        <div class="w-full md:w-1/3 hidden md:block">
            <div class="md:sticky md:top-28">
                <div
                    class="bg-white dark:bg-neutral-900/20 rounded-xl shadow-lg p-5 divide-y divide-neutral-300 dark:divide-neutral-700 border border-neutral-300 dark:border-neutral-700"
                >
                    <h3 class="text-balance text-3xl font-extrabold tracking-tight text-neutral-800 dark:text-neutral-300 mb-4">
                        Selected Posts
                    </h3>

                    <div class="pt-4">
                        <ul>
                            {posts.map(post => (
                                <li class="
                                    max-w-prose text-pretty font-light text-neutral-600 sm:text-lg rounded-md transition-colors duration-200 ease-in-out hover:bg-neutral-200 hover:text-orange-400 dark:text-neutral-400 dark:hover:text-orange-300 dark:focus:outline-none"
                                >
                                    <a
                                        href=`/posts/${post.slug}`
                                        data-astro-prefetch
                                        data-slug={post.slug}
                                        class="w-full block post-link outline-none focus:outline-none focus-visible:ring p-3"
                                    >
                                        <span>{post.data.title}</span>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
